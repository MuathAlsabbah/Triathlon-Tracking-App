<div class="container mt-5">

<h1 class="text-center mb-4">Add Event</h1>

<form action="/event/add" method="post" enctype="multipart/form-data">
<div class="div">


</div>
        <table class="w-100">
            <tbody>
                <tr>
                    <td class="p-4" >
                        <label for="event_name" class="form-label">Event Title</label>
                        <input type="text" name="event_name" class="form-control" id="event_name" required>
                    </td>
                </tr>

                <tr>
                    <td class="p-4">
                        <label for="location" class="form-label">Location</label>
                        <input type="text" name="location" class="form-control" id="location" required>
                    </td>
                </tr>

                <tr>
                    <td class="p-4">
                        <label for="description" class="form-label">Description</label>
                        <input type="text" name="description" class="form-control" id="description" required>
                    </td>
                </tr>

                <tr>
                    <td class="p-4">
                        <div class="row">
                            <div class="col">
                                <label for="max_participants" class="form-label">Max Participants</label>
                                <input type="number" name="max_participants" class="form-control" id="max_participants" required>
                            </div>
                            <div class="col">
                                <label for="isFull" class="form-label">Is Full</label>
                                <select name="isFull" class="form-select" id="isFull">
                                    <option value="false">False</option>
                                    <option value="true">True</option>
                                </select>
                            </div>
                        </div>
                    </td>
                </tr>
                
                <tr>
                    <td class="p-4">
                        <div class="row">
                            <div class="col">
                                <label for="event_date" class="form-label">Event Date</label>
                                <input type="date" name="event_date" class="form-control" id="event_date" required>
                            </div>
                            <div class="col">
                                <label for="time" class="form-label">Event Time</label>
                                <input type="text" name="time" class="form-control" id="time" placeholder="14:00 PM" required>
                            </div>
                            <div class="col">
                                <label for="image" class="form-label">Event Image</label>
                                <input type="file" name="image" class="form-control" id="image" accept="image/*" required>
                            </div>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td class="text-center">
                        <button type="submit" class="btn btn-primary">Create Event</button>
                    </td>
                </tr>
            </tbody>
        </table>


  </form>
</div>