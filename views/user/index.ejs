<h1>View Profile</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Username</th>
      <th>Email</th>
      <th>Age</th>
      <th>Gender</th>
      <th>Created At</th>
      <th>Updated At</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>
        <%= user.name %> <!-- Display username -->
      </td>
      <td><%= user.email %></td>
      <td><%= user.age %></td>
      <td><%= user.gender %></td>
      <td><%= dayjs(user.createdAt).fromNow(true) %> ago</td>
      <td><%= dayjs(user.updatedAt).fromNow(true) %> ago</td>
      <td>
        <a href="/user/edit?id=<%= user._id %>">
          Edit
        </a>
      </td>
      <td>
        <a href="/user/delete?id=<%= user._id %>">
          Delete
        </a>
      </td>
    </tr>
  </tbody>
</table>

<!-- Display current profile picture if available -->
<h3>Current Profile Picture</h3>
<% if (user.profile_picture) { %>
  <img src="<%= user.profile_picture %>" alt="Profile Picture" width="150" height="150">
<% } else { %>
  <p>No profile picture available.</p>
<% } %>

<!-- Upload new profile picture -->
<h3>Upload a New Profile Picture</h3>
<form action="/user/index" method="POST" enctype="multipart/form-data">
  <div class="form-group">
    <label for="profile_picture">Choose a profile picture:</label>
    <input type="file" name="profile_picture" class="form-control" accept="image/*" required>
  </br>
  
  </div>
  <button type="submit" class="btn btn-primary">Upload</button>
</form>
