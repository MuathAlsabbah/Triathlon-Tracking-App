<h1>View Profile</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Image</th>
      <th>Username</th>
      <th>Email</th>
      <th>Age</th>
      <th>Gender</th>
      <th>Created At</th>
      <th>Updated At</th>
      <th>Edit</th>
      <th>Delete</th>

    </tr>
  </thead>
  <tbody>
    <tr>
      <td>
        <img src="/uploads/<%= user.profile_picture %>"
                  style="
                        height: 110px;
                        width: 105px;
                        margin-right: 20px;
                        border-radius: 50%;
                        border: 1px solid black;
                        object-fit: cover;">
      </td>
      <td>
          <%= user.username %> <!-- Assuming you want to display username here -->
      </td>
      <td><%= user.email %></td>
      <td><%= user.age %></td>
      <td><%= user.gender %></td>
      <td><%= dayjs(user.createdAt).fromNow(true) %> ago</td>
      <td><%= dayjs(user.updatedAt).fromNow(true) %> ago</td>
      <td>
        <a href="/user/edit?id=<%= user._id %>">
          Edit
        </a>
      </td>
      <td>
        <a href="/user/delete?id=<%= user._id %>">
          Delete
        </a>
      </td>
    </tr>
  </tbody>
</table>
