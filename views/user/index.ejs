<h1>View Profile</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-4 mb-4">
            <div class="card">
                <img src="/uploads/<%= user.profile_picture %>" alt="Profile Picture" 
                     class="card-img-top img-fluid" 
                     style="background-color: #eeeeee; height: 200px; object-fit: contain; border-radius: 50%; border: 1px solid black;">
                <div class="card-body">
                    <h5 class="card-title text-center mb-4"><%= user.name %></h5>

                    <h6>Email: <%= user.email %></h6>
                    <h6>Age: <%= user.age %></h6>
                    <h6>Gender: <%= user.gender %></h6>
                    
                    <div class="d-flex justify-content-between mt-3"> 
                        <h6>Created: <%= dayjs(user.createdAt).fromNow(true) %> ago</h6>
                        <h6>Updated: <%= dayjs(user.updatedAt).fromNow(true) %> ago</h6>
                    </div>

                    <div class="d-flex justify-content-between mt-3">
                        <a href="/user/edit?id=<%= user._id %>" class="btn btn-primary">Edit</a>
                        <a href="/user/delete?id=<%= user._id %>" class="btn btn-danger">Delete</a>
                    </div>
                </div>    
            </div>
        </div>
    </div>
</div>
