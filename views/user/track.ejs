    <div class="container">
        <h1 class="mb-4">User Exercise Tracking Progress</h1>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Exercise</th>
                    <th>Duration (minutes)</th>
                    <th>Distance (km)</th>
                    <th>Calories Burned</th>
                    <th>Status</th>
                </tr>
            </thead>

            <tbody>
                <% trackingRecords.forEach(track => { %>
                    <tr>
                        <td><%= new Date(track.date).toLocaleDateString() %></td>
                        <td><%= track.exercise.name %></td>
                        <td><%= track.duration %></td>
                        <td><%= track.distance %></td>
                        <td><%= track.calories_burned %></td>
                        <td><%= track.state %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>

