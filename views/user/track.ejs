    <div class="container">
        <h1 class="mb-4">User Exercise  Progress</h1>
        <% let total_calories_burned = 0; %>
        <% let total_Exercise_ToDo =0; %>
        <% tracking.forEach(track => { %>

            <% total_calories_burned +=track.calories_burned;%>
            <% if(track.Status == "completed"){
                total_Exercise_ToDo =total_Exercise_ToDo+1;
            }
            %>
        <% }) %>

            <div class="d-flex justify-content-evenly   mb-5">
                <div class="card-home" style="background-color: rgb(167, 143, 224);">
                    <p>Total Calories Burned: <%= total_calories_burned %></p>
                </div>
                <div class="card-home" style="background-color: rgb(14, 214, 198);">
                    <p>Total numberof completed exercise: <%= tracking.length %></p>
                </div>
                
            </div>
       

        
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Exercise</th>
                    <th>Duration (minutes)</th>
                    <th>Calories Burned</th>
                    <th>Status</th>
                </tr>
            </thead>

            <tbody>
                <% tracking.forEach(track => { %>
                    <tr>
                        <td><%= new Date(track.date).toLocaleDateString() %></td>
                        <td><%= track.exercise.name %></td>
                        <td><%= track.duration %></td>
                        <td><%= track.calories_burned %></td>
                        <td><%= track.status %></td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>

