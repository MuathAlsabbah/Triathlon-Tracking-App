<div class="container">
  <h1>Log Progress for <%= exercise.name %></h1>

<form action="/admin/trainingPlans/log-progress/<%= exercise._id %>" method="POST">

  <label>Notes:</label>
  <textarea name="notes" placeholder="Any additional notes" class="form-control"></textarea>
</br>

  <label>Duration (minutes):</label>
  <input type="number" name="duration" min="0" required class="form-control" >
</br>


  <label>Calories Burned:</label>
  <input type="number" name="calories_burned" min="0" required class="form-control">
</br>


  <button type="submit" class="btn btn-primary">Submit Progress</button>
</form>

</div>

