<div class="container mt-5  bg-container">
<h1 class="text-center mb-4">Add a New Training Plan</h1>
    <form action="/admin/trainingPlans" method="POST">
        <table class="w-100">
            <tbody>

                <tr>
                    <td class="p-4">
                        <label for="title" class="form-label">Title</label>
                        <input type="text" name="title" class="form-control" id="title" required>
                    </td>
                </tr>
                
                <tr>
                    <td class="p-4">
                        <label for="description" class="form-label">Description</label>
                        <textarea name="description" class="form-control" id="description" required></textarea>
                    </td>
                </tr>
                <tr>
                    <td class="p-4">
                        <label for="userId" class="form-label">Assign to User</label>
                        <select name="userId" class="form-select" id="userId" required>
                            <% users.forEach(user => { %>
                                <option value="<%= user._id %>"><%= user.name %></option>
                            <% }) %>
                        </select>
                    </td>
                </tr>

                <tr>
                    <td class="p-4" >
                            <legend>Exercises</legend>
                            <% exercises.forEach(exercise => { %>
                                <div class="form-check">
                                    <input type="checkbox" name="exercises" value="<%= exercise._id %>" class="form-check-input" id="exercise_<%= exercise._id %>">
                                    <label class="form-check-label" for="exercise_<%= exercise._id %>"><%= exercise.name %></label>
                                </div>
                            <% }) %>
                    </td>
                </tr>

                <tr>
                    <td class="text-center">
                        <button type="submit" class="btn btn-primary">Create</button>
                    </td>
                </tr>
            </tbody>
        </table>
    </form>
</div>